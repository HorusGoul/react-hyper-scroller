{
  "name": "react-hyper-scroller",
  "description": "Hyper-Fast Scroller for the web",
  "version": "3.0.0-beta.11",
  "keywords": [
    "virtual list",
    "scroller",
    "virtual scroll"
  ],
  "license": "MIT",
  "author": "Horus Lugo <hola@horus.dev>",
  "repository": "HorusGoul/react-hyper-scroller",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsup",
    "test:e2e": "jest --config jest.e2e.js",
    "typecheck": "tsc --noEmit",
    "lint:base": "eslint --ext .js,.json,.ts,.tsx",
    "lint": "npm run lint:base -- src e2e",
    "prepare": "simple-pre-commit",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "prepack": "npm run build"
  },
  "simple-pre-commit": "npm run typecheck && npx lint-staged",
  "lint-staged": {
    "{src,e2e}/**/*.{ts,js,json}": [
      "npm run lint:base -- --fix"
    ]
  },
  "peerDependencies": {
    "react": "^16.8 || ^17",
    "react-dom": "^16.8 || ^17"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/jest-environment-puppeteer": "^4.4.1",
    "@types/node": "^16.11.7",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vitejs/plugin-react": "^1.0.0",
    "all-contributors-cli": "^6.20.0",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "jest": "^27.3.1",
    "jest-puppeteer": "^6.0.0",
    "jest-puppeteer-istanbul": "^0.5.3",
    "lint-staged": "^12.0.2",
    "prettier": "^2.4.1",
    "simple-pre-commit": "^1.2.1",
    "ts-jest": "^27.0.7",
    "tsup": "^5.7.2",
    "typescript": "^4.3.2",
    "vite": "^2.6.4",
    "vite-plugin-istanbul": "^2.2.2"
  }
}
